---
import Layout from "../layouts/Layout.astro";
import TgAsideChats from "../components/Telegram/TgAsideChats.astro";
import TgHeader from "../components/Telegram/TgHeader.astro";
import TgMain from "../components/Telegram/TgMain.astro";
---

<Layout title="Telegram" image="src/assets/t_logo_2x.png" >
  <main>
    <TgAsideChats />
    <TgHeader />
    <TgMain />
  </main>
</Layout>

<style>
main {
  overflow: hidden;
  display: grid;
  grid-template-areas: 
    "tg-aside-chats tg-header"
    "tg-aside-chats tg-main";
  grid-template-rows: 63.6px 1fr;
  grid-template-columns: 270px 1fr;
  height: 100vh;
}

</style>